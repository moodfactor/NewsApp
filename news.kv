#:kivy 2.1.0

<NewsHome>:
    label_1: My_label
     
    GridLayout:
        cols: 3
        padding: 20
        spacing: 10

        TextInput:
            id: textinput1
            multiline: False
            on_focus: root.textinput_callback(self.text)

        Label:
            id: textinput_label_mirror
            text: ""

        Switch:
            id: switch
            on_touch_down: root.on_switch_state()
    
        Label:
            id: switch_label_state
            text: ""
        Button:
            text: 'Click Me'
            on_press: root.on_press_callback()
            on_state: root.state_callback

        Label:
            id: label_test2
            text: "............"

        Label:
            id: label_test
            text: ""
            pos: 200, 200

        Label:
            id: My_label
            text : "djlkj"
            font_size: 25
            size_hint_y: None
            height: self.texture_size[1]

        Button:
            text: "$$$$$$$"
            on_touch_down: root.do_something()

        Button:
            id: my_button
            text:root.change_label("zombie")


        Button:
            id: push_button
            text: f"my state is {self.state}"
        
        Label:
            text : f"{root.label_text}".upper()
        
        Button:
            text: "Click me"
            on_release: pass

        TextInput:
            on_focus: self.insert_text("Focus" if args[1] else "No focus")

